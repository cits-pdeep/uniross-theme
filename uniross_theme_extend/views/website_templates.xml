<?xml version="1.0"?>
<odoo>

    <!--This template used for set image in header menus-->
    <template inherit_id="website.submenu" id="website_submenu_inherit_id">
        <!-- This code has style for vertical align name center with image
            <a t-att-href="submenu._clean_url()" t-attf-class="#{link_class or ''} #{submenu._is_active() and 'active'}" role="menuitem" t-ignore="true" t-att-target="'_blank' if submenu.new_window else None"
            style="display: flex; align-items: center;">
                <img src="http://localhost:8088/web/image/1120" style="margin-right: 10px;"/>
                <span t-field="submenu.name"/>
                <span>Single-use<br/>Batteries</span>
            </a>
        -->
        <xpath expr="//li[contains(@t-if, 'submenu.is_visible')]/a/span" position="before">
            <img t-if="submenu.menu_image" t-att-src="image_data_uri(submenu.menu_image)"/>
        </xpath>
        <xpath expr="//li[contains(@t-elif, 'show_dropdown')]/a/span" position="replace">
            <!--<img t-if="submenu.menu_image" t-att-src="image_data_uri(submenu.menu_image)"/>-->
            <div class="text-with-image">
                <img t-if="submenu.menu_image" t-att-src="image_data_uri(submenu.menu_image)"/>
                <div class="text-content">
                    <t t-set="menu_name" t-value="submenu.get_menu_name()"/>
                    <t t-esc="menu_name"/>

                </div>
                <span t-field="submenu.name" style="display:none"/>
            </div>
        </xpath>
        <xpath expr="//li[contains(@t-elif, 'show_dropdown')]" position="attributes">
            <attribute name="t-attf-class">#{item_class or ''} dropdown
                #{submenu.is_mega_menu and submenu.name == 'Single-use Batteries' and 'position-static'}
            </attribute>
        </xpath>
        <xpath expr="//div[@t-if='submenu.is_mega_menu and not is_mobile']" position="attributes">
            <attribute name="t-attf-style">
                #{submenu.name=='Single-use Batteries' and 'width: 770px !important;left: 910px;' or ''}
            </attribute>
        </xpath>
    </template>

    <!--This template is used for center all menus-->
    <!--Need to select "Menu - Sales 2" from theme editor.-->
    <template id="template_header_sales_two" inherit_id="website.template_header_sales_two">
        <xpath expr="//div[contains(@class, 'o_border_contrast')]/div" position="attributes">
            <attribute name="class">container d-flex justify-content-center</attribute>
        </xpath>
        <xpath expr="//div[contains(@class, 'o_header_sales_two_top')]" position="attributes">
            <attribute name="class">o_header_sales_two_top py-1 d-none</attribute>
        </xpath>
        <xpath expr="//t[@t-call='website.placeholder_header_search_box']" position="replace">
            <t t-call="website.placeholder_header_search_box">
                <t t-set="_input_classes" t-valuef="text-bg-light"/>
                <t t-set="_submit_classes" t-valuef="bg-o-color-3"/>
            </t>
        </xpath>
        <xpath expr="//ul[contains(@class, 'align-items-center')]" position="after">
            <li style="margin-left: 240px;list-style: none;font-size: 14px;font-weight: 500;">
                <a style="color: #2C2C2C;" href="/about-us">About Us</a>
            </li>
            <li style="list-style: none;font-size: 14px;font-weight: 500;">
                <a style="color: #2C2C2C;" href="/contactus">Contact Us</a>
            </li>
            <li style="list-style: none;border-radius: 5px;" class="book-appointment">
                <a class="book-appointment" href="/appointment">
                    <i class="fa fa-calendar"/>
                    Book An Appointment
                </a>
            </li>
        </xpath>
    </template>

    <!--Hide contact us button from the header (Menu - Sales 2)-->
    <template id="header_call_to_action" inherit_id="website.header_call_to_action">
        <xpath expr="//section" position="attributes">
            <attribute name="class">oe_unremovable oe_unmovable s_text_block d-none</attribute>
        </xpath>
    </template>

    <template id="products_attributes" inherit_id="website_sale.products_attributes">
        <xpath expr="//a[@t-if='attrib_values or tags']" position="replace"/>
    </template>

    <!--This template will put name and image of category at top of specific category page-->
    <template id="products_category_image" name="Category Image" inherit_id="website_sale.products">
        <xpath expr="//t[@t-call='website_sale.products_breadcrumb']" position="replace"/>
        <xpath expr="//t[@t-call='website_sale.search']" position="replace"/>
        <xpath expr="//div[@id='products_grid']" position="before">
            <t t-if="category and category.is_industrial_category">
                <t t-set="layout_mode" t-value="'list'"/>
            </t>
        </xpath>
        <xpath expr="//aside[@id='products_grid_before']" position="attributes">
            <attribute name="t-if">not category or not category.is_industrial_category</attribute>
        </xpath>
        <xpath expr="//div[@id='products_grid']" position="attributes">
            <attribute name="t-attf-class">#{'o_wsale_layout_list' if layout_mode == 'list' else ''} {{'col-lg-9' if not category or not category.is_industrial_category else 'col-12'}}</attribute>
        </xpath>
        <xpath expr="//div[hasclass('products_header')]" position="before">
            <t t-if="is_view_active('website_sale.search')" t-call="website_sale.search">
                <t t-set="search" t-value="original_search or search"/>
                <t t-set="_form_classes" t-valuef="d-lg-inline {{'d-inline' if not category else 'd-none'}}"/>
            </t>
        </xpath>
        <xpath expr="//t[@t-call='website_sale.pricelist_list']" position="before">
            <div t-if="not category or not category.is_industrial_category">
                <button class="grid-top-button" style="color: #F65026;border-color: #F65026;">
                    <img src="/uniross_theme_extend/static/img/menu/battery.png"/>Primary Batteries
                </button>
                <button class="grid-top-button">
                    <img src="/uniross_theme_extend/static/img/system-uicons_coin.png"/>Button/ Coin Batteries
                </button>
                <button class="grid-top-button">
                    <img src="/uniross_theme_extend/static/img/Vector_1.png"/>Specialty Batteries
                </button>
            </div>
        </xpath>
        <xpath expr="//div[@t-if='opt_wsale_categories']" position="before">
            <!--t-if="attrib_values or tags"-->
            <a t-if="attrib_values or tags"
               t-att-href="keep('/shop'+ ('/category/'+slug(category)) if category else None, attrib=0, tags=0)"
               t-attf-class="btn btn-{{navClass}} d-flex align-items-center py-1 mb-2">
                <small class="mx-auto">
                    <b>Clear Filters</b>
                </small>
                <i class="oi oi-close"/>
            </a>
        </xpath>
        <xpath expr="//div[@id='oe_structure_website_sale_products_1']" position="after">
            <section t-if="category" class="s_text_image pt32 pb32 o_colored_level" data-snippet="s_text_image"
                     data-name="Text - Image"
                     style="background-image: none;">
                <div class="container justify-content-between ">
                    <div class="row"><!-- align-items-center-->
                        <div class="col-lg-6 o_colored_level pb0 pt0">
                            <p class="o_default_snippet_text">
                                <!--Breadcrumb-->
                                <t t-call="website_sale.products_breadcrumb">
                                    <t t-set="_classes" t-valuef="d-none d-lg-flex w-100 p-0 small"/>
                                </t>
                                <!---->
                            </p>
                            <!--<h2 class="o_default_snippet_text"><br/></h2>
                            <h2 class="o_default_snippet_text"><br/></h2>
                            <h2 class="o_default_snippet_text"><br/></h2>-->
                            <h2 class="o_default_snippet_text">
                                <span t-esc="category.name"/>
                            </h2>
                        </div>
                        <div class="col-lg-6 pt16 pb16 o_colored_level">
                            <img t-if="category.image_1920" t-att-src="image_data_uri(category.image_1920)"
                                 class="img img-fluid mx-auto" alt="" loading="lazy" data-mimetype="image/jpeg"
                                 style="margin-right: 0px !important;width: 350px;"/><!--style="margin-right: auto !important; margin-left: auto !important;"-->
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
        <xpath expr="//div[@id='oe_structure_website_sale_products_2']" position="before">
            <section class="s_text_block pt40 pb40 o_colored_level" data-snippet="s_text_block" data-name="Text"
                     style="background: linear-gradient(91.77deg, #2C2C2C -7.9%, #676767 93.8%);">
                <div class="s_allow_columns container">
                    <div class="row d-flex justify-content-between"
                         style="color: #ffffff;font-size: 16px;font-weight: 400;">

                        <div class="o_colored_level col-lg-6 col-md-12">
                            <p class="o_default_snippet_text" style="text-align: center;">Uniross single-use batteries,
                                available in alkaline, carbon zinc, and lithium variants, provide reliable, optimal
                                power to maximize your devices' performance. They are ideal for electrical toys, lights,
                                flashlights, remotes, and countless other devices.
                            </p>
                        </div>
                        <div class="o_colored_level col-lg-4 col-md-12 mobile_pt24">
                            <div class="o_text_columns">
                                <div class="row">
                                    <div class="col-4 o_colored_level">
                                        <p class="o_default_snippet_text" style="text-align: center;">
                                            <img src="/uniross_theme_extend/static/img/category_page/performance 1.png"
                                                 alt="" class="img img-fluid o_we_custom_image" loading="lazy"/>
                                            <br/>
                                        </p>
                                        <p class="o_default_snippet_text" style="text-align: center;">High Performance
                                        </p>
                                    </div>
                                    <div class="col-4 o_colored_level">
                                        <p style="text-align: center;">
                                            <img src="/uniross_theme_extend/static/img/category_page/duration 2.png"
                                                 alt="" class="img img-fluid o_we_custom_image" loading="lazy"/>
                                            <br/>
                                        </p>
                                        <p style="text-align: center;">Long Shelf Life</p>
                                    </div>
                                    <div class="col-4 o_colored_level">
                                        <p style="text-align: center;">
                                            <img src="/uniross_theme_extend/static/img/category_page/protection 1.png"
                                                 alt="" class="img img-fluid o_we_custom_image" loading="lazy"/>
                                            <br/>
                                        </p>
                                        <p style="text-align: center;">Leakage Protection</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
    </template>

    <!--Center product name in grid-->
    <template id="products_item" inherit_id="website_sale.products_item">
        <xpath expr="//div[hasclass('o_wsale_product_btn')]" position="replace">
        </xpath>
        <xpath expr="//div[contains(@class, 'o_wsale_product_information')]" position="replace">
            <div class="o_wsale_product_information position-relative d-flex flex-column flex-grow-1 flex-shrink-1">
                <div class="row" style="min-height: -webkit-fill-available;">
                    <div class="col-12 col-md-6 extra-name">
                        <div class="o_wsale_product_information_text flex-grow-1">
                            <h6 class="o_wsale_products_item_title mb-2 text-center">
                                <a class="text-primary text-decoration-none cit-product-name" itemprop="name"
                                   t-att-href="product_href"
                                   t-att-content="product.name" t-field="product.name"/>
                                <a t-if="not product.website_published" role="button" t-att-href="product_href"
                                   class="btn btn-sm btn-danger" title="This product is unpublished.">
                                    Unpublished
                                </a>
                            </h6>
                            <div class="oe_subdescription mb-2 text-muted small" contenteditable="false">
                                <div itemprop="description" t-field="product.description_sale"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 d-none d-md-block extra-buttons button-column">
                        <div class="o_wsale_product_sub d-flex justify-content-end align-items-end gap-2 flex-wrap pb-1">
                            <t t-set="template_price_vals" t-value="get_product_prices(product)"/>
                            <div class="o_wsale_product_btn">
                                <t t-set="product_variant_id" t-value="product._get_first_possible_variant_id()"/>
                                <input name="product_id" t-att-value="product_variant_id" type="hidden"/>
                                <t t-if="product_variant_id and template_price_vals['price_reduce'] or not website.prevent_zero_price_sale">
                                    <a t-if="product._website_show_quick_add()" href="#" role="button"
                                       class="add-to-queue a-submit"
                                       aria-label="Shopping cart" title="Shopping cart">
                                        Add To Quote
                                    </a>
                                </t>
                                <div class="mt-2">
                                    <a t-att-href="product_href" href="#" role="button"
                                       class="view-product">
                                        View Product
                                    </a>
                                </div>
                            </div>
                            <div class="product_price" itemprop="offers" itemscope="itemscope"
                                 itemtype="http://schema.org/Offer">
                                <t t-if="'base_price' in template_price_vals and (template_price_vals['base_price'] &gt; template_price_vals['price_reduce']) and (template_price_vals['price_reduce'] or not website.prevent_zero_price_sale)">
                                    <del t-attf-class="text-muted me-1 h6 mb-0" style="white-space: nowrap;">
                                        <em class="small" t-esc="template_price_vals['base_price']"
                                            t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                    </del>
                                </t>
                                <span class="h6 mb-0"
                                      t-if="template_price_vals['price_reduce'] or not website.prevent_zero_price_sale"
                                      t-esc="template_price_vals['price_reduce']"
                                      t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                <span class="h6 mb-0" t-else="" t-field="website.prevent_zero_price_sale_text"/>
                                <span itemprop="price" style="display:none;"
                                      t-esc="template_price_vals['price_reduce']"/>
                                <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
