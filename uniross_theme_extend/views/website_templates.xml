<?xml version="1.0"?>
<odoo>

    <!--This template used for set image in header menus-->
    <template inherit_id="website.submenu" id="website_submenu_inherit_id">
        <!-- This code has style for vertical align name center with image
            <a t-att-href="submenu._clean_url()" t-attf-class="#{link_class or ''} #{submenu._is_active() and 'active'}" role="menuitem" t-ignore="true" t-att-target="'_blank' if submenu.new_window else None"
            style="display: flex; align-items: center;">
                <img src="http://localhost:8088/web/image/1120" style="margin-right: 10px;"/>
                <span t-field="submenu.name"/>
                <span>Single-use<br/>Batteries</span>
            </a>
        -->
        <xpath expr="//li[contains(@t-if, 'submenu.is_visible')]/a/span" position="replace">
            <!--<img t-if="submenu.menu_image" t-att-src="image_data_uri(submenu.menu_image)"/>-->
            <div class="text-with-image">
                <img t-if="submenu.menu_image" t-att-src="image_data_uri(submenu.menu_image)"/>
                <div class="text-content">
                    <t t-set="menu_name" t-value="submenu.get_menu_name()"/>
                    <t t-esc="menu_name"/>
                </div>
                <span t-field="submenu.name" style="display:none"/>
            </div>
        </xpath>
        <xpath expr="//li[contains(@t-elif, 'show_dropdown')]/a/span" position="replace">
            <!--<img t-if="submenu.menu_image" t-att-src="image_data_uri(submenu.menu_image)"/>-->
            <div class="text-with-image">
                <img t-if="submenu.menu_image" t-att-src="image_data_uri(submenu.menu_image)"/>
                <div class="text-content">
                    <t t-set="menu_name" t-value="submenu.get_menu_name()"/>
                    <t t-esc="menu_name"/>
                </div>
                <span t-field="submenu.name" style="display:none"/>
            </div>
        </xpath>
        <xpath expr="//li[contains(@t-elif, 'show_dropdown')]" position="attributes">
            <attribute name="t-attf-class">#{item_class or ''} dropdown
                #{submenu.is_mega_menu and submenu.name == 'Single-use Batteries' and 'position-static'}
            </attribute>
        </xpath>
        <xpath expr="//div[@t-if='submenu.is_mega_menu and not is_mobile']" position="attributes">
            <attribute name="t-attf-style">
                #{submenu.name=='Single-use Batteries' and 'width: 770px !important;' or ''}
                #{submenu.name!='Single-use Batteries' and 'width: max-content !important;' or ''}
            </attribute>
        </xpath>
    </template>

    <!--This template is used for center all menus-->
    <!--Need to select "Menu - Sales 2" from theme editor.-->
    <template id="template_header_sales_two" inherit_id="website.template_header_sales_two">
        <xpath expr="//div[contains(@class, 'o_border_contrast')]/div" position="attributes">
            <attribute name="class">container d-flex justify-content-center</attribute>
        </xpath>
        <xpath expr="//div[contains(@class, 'o_header_sales_two_top')]" position="attributes">
            <attribute name="class">o_header_sales_two_top py-1 d-none</attribute>
        </xpath>
        <xpath expr="//t[@t-call='website.placeholder_header_search_box']" position="replace">
            <t t-call="website.placeholder_header_search_box">
                <t t-set="_input_classes" t-valuef="text-bg-light"/>
                <t t-set="_submit_classes" t-valuef="bg-o-color-3"/>
            </t>
        </xpath>
        <!--<xpath expr="//t[@t-call='portal.placeholder_user_sign_in']" position="replace">
        </xpath>-->
        <xpath expr="//ul[contains(@class, 'align-items-center')]" position="after">
            <li style="margin-left: 240px;list-style: none;font-size: 14px;font-weight: 500;">
                <a style="color: #2C2C2C;" href="/about-us" class="uni-about-us">About Us</a>
            </li>
            <li style="list-style: none;font-size: 14px;font-weight: 500;">
                <a style="color: #2C2C2C;" href="/contactus" class="uni-contact-us">Contact Us</a>
            </li>
            <li style="list-style: none;border-radius: 5px;" class="book-appointment">
                <a class="book-appointment" href="/appointment">
                    <i class="fa fa-calendar"/>
                    Book An Appointment
                </a>
            </li>
        </xpath>
    </template>

    <!--This template is used for hide sign in menus for mobile view-->
    <template id="template_header_mobile" inherit_id="website.template_header_mobile">
        <!--<xpath expr="//t[@t-call='portal.placeholder_user_sign_in']" position="replace">
        </xpath>-->
        <xpath expr="//t[@t-call='website.placeholder_header_text_element']" position="before">
            <li role="presentation" class="nav-item">
                <a role="menuitem" href="/about-us" class="nav-link  mob-about-us">
                <div class="text-with-image">
                    <div class="text-content">
                        About Us
                    </div>
                    <span style="display:none" data-oe-model="website.menu" data-oe-id="10" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">About Us</span>
                </div>
            </a>
        </li>
        <li role="presentation" class="nav-item ">
                <a role="menuitem" href="/contactus" class="nav-link mob-contact-us">
                <div class="text-with-image">
                    <div class="text-content">
                        Contact Us
                    </div>
                    <span style="display:none" data-oe-model="website.menu" data-oe-id="10" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Contact Us</span>
                </div>
            </a>
        </li>

        </xpath>
    </template>

